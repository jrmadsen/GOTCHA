#ifndef GOTCHA_CONFIG_H
#define GOTCHA_CONFIG_H

#define GOTCHA_GET_VERSION(MAJOR, MINOR, PATCH) \
  (MAJOR * 100000 + MINOR * 100 + PATCH)

// clang-format off
#define GOTCHA_VERSION (GOTCHA_GET_VERSION @GOTCHA_VERSION@)
#define GOTCHA_VERSION_MAJOR (GOTCHA_VERSION / 100000)
#define GOTCHA_VERSION_MINOR ((GOTCHA_VERSION / 100) % 1000)
#define GOTCHA_VERSION_PATCH (GOTCHA_VERSION % 100)

#define GOTCHA_LIBTOOL_INTERFACE @LIBTOOL_INTERFACE@
#define GOTCHA_LIBTOOL_REVISION @LIBTOOL_REVISION@
#define GOTCHA_LIBTOOL_AGE @LIBTOOL_AGE@
// clang-format on

#define GOTCHA_LIBTOOL_VERSION                                          \
  GOTCHA_GET_VERSION(GOTCHA_LIBTOOL_INTERFACE, GOTCHA_LIBTOOL_REVISION, \
                     GOTCHA_LIBTOOL_AGE)

#endif /* GOTCHA_CONFIG_H */
